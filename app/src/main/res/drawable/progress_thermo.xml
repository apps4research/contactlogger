<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Actual colors of progress bar, when it has a value -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="90"
                    android:endColor="#FFFF6702"
                    android:startColor="#FFFFC9A6"
                    android:type="linear"
                    />
            </shape>
        </clip>
    </item>
</layer-list>