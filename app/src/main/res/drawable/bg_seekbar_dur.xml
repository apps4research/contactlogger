<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Seconds range -->
    <item android:left="0dip" android:right="0dip">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_corner" />
            <solid android:color="@color/bg_seekbar_dur1" />
        </shape>
    </item>
    <!-- Hours range -->
    <item android:left="120dip" android:right="0dip">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_corner" />
            <solid android:color="@color/bg_seekbar_dur3" />
        </shape>
    </item>
    <!-- Minutes range -->
    <item android:left="70dip" android:right="113dip">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_seekbar_dur2" />
        </shape>
    </item>
</layer-list>