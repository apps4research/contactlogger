<resources>
    <!-- Base application theme -->
    <style name="MaterialAppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- primary text color, 87% of black -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:editTextColor">@color/textColorPrimary</item>
        <item name="android:windowBackground">@drawable/app_bg</item>

        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="android:Widget.Material.ActionBar.Solid">
        <!-- remove shadow under action bar -->
        <item name="android:elevation">0dip</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/bg_on</item>
    </style>

    <style name="toggleButton" parent="@android:style/Widget.Button">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

    <style name="ButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>