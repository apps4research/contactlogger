            <ToggleButton
                android:id="@+id/btn_exp_2"
                style="@style/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_exp_1"
                android:layout_marginLeft="7dip"
                android:layout_toRightOf="@+id/btn_exp_1"
                android:background="@drawable/btn_smiley2"
                android:contentDescription="@string/btn_exp_2"
                android:minHeight="@dimen/btn_height"
                android:minWidth="@dimen/btn_width" />

            <ToggleButton
                android:id="@+id/btn_exp_3"
                style="@style/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_exp_2"
                android:layout_marginLeft="7dip"
                android:layout_toRightOf="@+id/btn_exp_2"
                android:background="@drawable/btn_smiley3"
                android:contentDescription="@string/btn_exp_3"
                android:minHeight="@dimen/btn_height"
                android:minWidth="@dimen/btn_width" />

            <ToggleButton
                android:id="@+id/btn_exp_4"
                style="@style/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_exp_3"
                android:layout_marginLeft="7dip"
                android:layout_toRightOf="@+id/btn_exp_3"
                android:background="@drawable/btn_smiley4"
                android:contentDescription="@string/btn_exp_4"
                android:minHeight="@dimen/btn_height"
                android:minWidth="@dimen/btn_width" />

            <ToggleButton
                android:id="@+id/btn_exp_5"
                style="@style/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_exp_4"
                android:layout_marginLeft="7dip"
                android:layout_toRightOf="@+id/btn_exp_4"
                android:background="@drawable/btn_smiley5"
                android:contentDescription="@string/btn_exp_5"
                android:minHeight="@dimen/btn_height"
                android:minWidth="@dimen/btn_width" />

        </RelativeLayout>

        <Button
            android:id="@+id/logit"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FrameExperience"
            android:layout_marginBottom="25dip"
            android:layout_marginEnd="@dimen/frame_right_margin"
            android:layout_marginStart="@dimen/frame_left_margin"
            android:layout_marginTop="@dimen/frame_top_margin"
            android:background="@drawable/btn_log_contact"
            android:minHeight="@dimen/btn_generic_height"
